@foreach (var item in Model) {
    <tr>

<td>

          <img src="@item.Imagen" style="width:150px; height:150px; object-fit: cover;" alt="Sin imagen" />

</td>
        <td>
            @Html.DisplayFor(modelItem => item.Consecutivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Documento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Descripcion)*@

@if(string.IsNullOrWhiteSpace(item.Descripcion))
{
<text>N/A</text>
}
else
{
            @Html.DisplayFor(modelItem => item.Descripcion)
}

        </td>
        <td>
            @*@Html.ActionLink("Editar", "Editar", new { id=item.id }) |
            @Html.ActionLink("Detallar", "Detallar", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.id })*@

<a style="color:#30B033; font-size:x-large;" href="@Url.Action("Detallar", new { id=item.id })">
<span class="glyphicon glyphicon-eye-open	" alt="Detallar" title="Detallar"></span>
</a>
&nbsp;&nbsp;

<a style="color:#30B033; font-size:x-large;" href="@Url.Action("Editar", new { id=item.id })">
<span class="glyphicon glyphicon-pencil" alt="Editar" title="Editar"></span>
</a>
&nbsp;&nbsp;

<a style="color:#30B033; font-size:x-large;" href="@Url.Action("Eliminar", new { id=item.id })">
<span class="glyphicon glyphicon-trash" alt="Eliminar" title="Eliminar"></span>
</a>

        </td>
    </tr>
}

</table>

